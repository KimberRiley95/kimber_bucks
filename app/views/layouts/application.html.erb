  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
<body>
  <div class="header hidden-xs">
    <img width="100%" src="/images/banner.jpg">
  </div>
  <div class="row" >
    <div class="col-sm-12" id = "header-bar">
      <p>Hello, <%= @current_user.first_name %>!</p>
      <div class="p2"><%= @current_user.get_bucks_balance %> Bucks</div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-2 ">
        <div id="navigation"><%= render 'layouts/navigation' %></div>
      </div>
      <div class="col-sm-10">
        <div class="panel-body"><%= yield %></div>
      </div>
    </div>
  </div>
</body>

</html>
